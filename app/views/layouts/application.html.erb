<!DOCTYPE html>
<html>
<head>
  <title>FacebookClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style='font-family: "Helvetica", sans-serif;'>

<% if logged_in? %>
  Logged in as: <%= current_user.email %>
  <a href="#">News Feed</a>
  <a href="#messages">Messages</a>
  <a href="#friends">Friends</a>
  <a href="#friend_requests">Friend Requests</a>
  <a href="#users/<%= current_user.id %>">Profile</a>
  <%= button_to "Sign Out", session_url, :method => "delete" %>
<% else %>
  <%= link_to "Sign In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% end %>
<br>

<% flash[:errors] && flash[:errors].each do |error| %>
  <%= error %><br>
<% end %>

<%= yield %>

</body>
</html>
