<div id="content" class="col-md-3 col-md-offset-2">
  <h3>Sign In</h3>

  <%= form_for @user, :url => session_url, role: "form" do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
      <%= f.submit "Sign In", class: "btn btn-primary" %>
  <% end %>
</div>