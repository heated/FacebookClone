<h3>New Comment</h3>

<%= form_for @comment, 
             :url => post_comment_url(params[:post_id], 
                                      @comment),
             :method => "put" do |f| %>
  <%= f.label :body, "Content" %><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Finish Changes" %>
<% end %>