<div class="col-md-4 col-md-offset-2">
  <h3>Create Account</h3>

  <%= form_for @user, role: "form" do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, 
          class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, 
          class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="radio">
      <%= f.label :gender_male, "Male" %>
      <%= f.radio_button :gender, "Male" %>
    </div>
    <div class="radio">
      <%= f.label :gender_female, "Female" %>
      <%= f.radio_button :gender, "Female" %>
    </div>
    <div class="form-group">
      <%= f.label :birthday %>
      <input type="date"
             id="user_birthday"
             class="form-control"
             name="user[birthday]">
    </div>
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="col-md-4">
  <h1>Wow, that's a pretty big form. Maybe instead you'd like to</h1>
  <%= button_to "Sign in as a Guest", 
                api_guests_url, 
                class: "btn btn-primary btn-lg btn-block" %>
  <h1>so you don't have to waste your precious time. Go ahead, it's on us!</h1>              
</div>