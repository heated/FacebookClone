<% @messages.each do |message| %>
  <br><%= message.user_from.name %>:
  <br><%= message.body %>
  <br>
<% end %>
<br>

<%= form_for @message do |f| %>
  <%= f.label :user_to, "To: " %>
  <%= f.text_field :user_to %><br>
  <%= f.label :body, "Message: " %><br>
  <%= f.text_area :body, size: "30x2" %><br>
  <%= f.submit "Send" %>
<% end %>