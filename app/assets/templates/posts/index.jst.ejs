<form id="new-post" role="form">
  <textarea rows="2"
            placeholder="What's on your mind?"
            name="post[body]"
            class="form-control"></textarea><br>
  <button class="btn btn-primary">Post</button>
</form>
<br>

<% posts.forEach(function(post) { %>
  <% var user = post.get('user'); %>

  <ul class="media-list" style="border-bottom: 1px solid lightgrey; padding:10px">
    <li class="media">
      <a class="pull-left" href="#">
        <img class="media-object" 
             src="<%= user.escape('icon') %>">
      </a>
      <div class="media-body">
        <h4 class="media-heading">
          <a href="#users/<%= user.id %>">
            <b><%= user.escape('name') %></b></a>
        </h4>
        <%= post.escape('body') %><br>
        <i><%= $.timeago(post.escape('created_at')) %></i>
        <br><br>

    <!-- NESTED COMMENTS = VERY BAD SON -->

        <% post.get('comments').each(function(comment, i) { %>
          <% var user = comment.get('user'); %>

            <ul class="media-list" style="padding:5px; border-top:1px solid lightgrey; <% if(i % 2 == 0){ %> background: #F0FFFF <% } %> ">
              <li class="media">
                <a class="pull-left" href="#">
                  <img class="media-object"
                       src="<%= user.get('icon') %>">
                </a>

                <div class="media-body">
                    <a href="#users/<%= user.escape('id') %>">
                      <b><%= user.escape('name') %></b></a>
                    <%= comment.escape('body') %><br>

                  <small><i><%= $.timeago(comment.escape('created_at')) %></i></small>
                </div>
              </li>
            </ul>
        <% }); %>

        <form class="new-comment">
          <input type="hidden"
                 name="comment[post_id]"
                 value="<%= post.id %>">

          <input type="text"
                 placeholder="Write a comment..."
                 name="comment[body]"
                 id="comment-body"
                 class="form-control"></textarea>
        </form>

      </div>
    </li>
    <br>
  </ul>

<% }); %>
