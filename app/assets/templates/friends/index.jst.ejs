<h3>Friends</h3>

<% if(friends.isEmpty()) { %>
  No friends!
<% } else { %>
  <% friends.forEach(function(user) { %>
    <ul class="media-list">
      <li class="media">
        <a class="pull-left" href="#">
          <img class="media-object" src="<%= user.get('icon') %>">
        </a>
        <div class="media-body">
          <h4 class="media-heading">
            <a href="#users/<%= user.escape('id') %>">
              <%= user.escape('name') %></a>
          </h4>
        </div>
      </li>
    </ul>
  <% }); %>
<% } %>